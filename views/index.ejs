<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('includes/head.ejs') %>
</head>
<body>
<%- include('includes/menu.ejs') %>

<div class="container-fluid text-center">
    <h3><%= title %></h3><br>
    <div class="container">
        <div class="search-container">
            <form action="/record" method="GET">
                <input style="width: 230px" type="datetime-local" name="startTime" id="startTime" >
                <input style="width: 230px" type="datetime-local" name="endTime" id="endTime">
                <input style="width: 230px" type="text" name="Witnesses" id="Witnesses" placeholder="username" value="<%= Witnesses %>">
                <button style="width: 135px" type="submit">Search</button>
            </form>
        </div>
    </div>
    <table class="table table-bordered" style="margin-top: 30px">
        <thead>
        <tr><th style="text-align:center;">ID</th><th style="text-align:center;">Time</th><th style="text-align:center;">Identification</th><th style="text-align:center;">Location</th><th style="text-align:center;">User</th><th style="text-align:center;">Action</th></tr>
        </thead>
        <tbody>
        <tbody>
        <% var id = (page - 1 ) * 10; %>
        <% for (var i = 0; i < birds.length; i++) { %>
            <tr>
                <td><%= id + i + 1 %></td>
                <td><%=birds[i].Time%></td>
                <td><%=birds[i].Identification%></td>
                <td><%=birds[i].location%></td>
                <td><%=birds[i].Witnesses%></td>
                <td><a href="/record/detail?_id=<%= birds[i]._id %>">
                        <button class="btn-info">Detail</button></a>
                </td>
            </tr>
        <% } %>
        </tbody>
        </tbody>


    </table>
</div>

<div class="container-fluid center" style="text-align:center;">
    <ul class="pagination" style="display: inline-block;float: none;">
        <li><a href="/record?pageNum=<%-page < 2 ? 1 : parseInt(page) - 1 %>">&laquo;</a></li>
        <% for(var i = 1; i <= total; i ++) { %>
            <li><a href="/record?pageNum=<%= i %>"><%= i %></a></li>
        <% } %>
        <li><a href="/record?pageNum=<%= page > parseInt(total) - 1 ? total : parseInt(page) + 1 %>">&raquo;</a></li>
    </ul>
</div>
</body>
<%- include('includes/script.ejs') %>
</html>
